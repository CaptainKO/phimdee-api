{
    "name": "rest-js-testing",
    "version": "1.0.0",
    "description": "learn nodejs, express and mongodb",
    "scripts": {
        "dev": "nodemon",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "migrate:gen": "npm run typeorm migration:generate -- -n Test1",
        "migrate:run": "npm run typeorm migration:run",
        "debug": "ts-node-dev  -r tsconfig-paths/register  --inspect --respawn --transpileOnly src/server.ts",
        "ts-node-dev": "ts-node-dev",
        "start": "npm run watch",
        "watch": "ts-node-dev -r tsconfig-paths/register --respawn --transpileOnly src/server.ts",
        "prod": "tsc && node ./dist/server.js",
        "build": "tsc"
    },
    "dependencies": {
        "@types/compression": "^1.0.1",
        "@types/multer": "^1.3.10",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.3",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.0",
        "express": "^4.16.3",
        "jsonwebtoken": "^8.5.1",
        "method-override": "^3.0.0",
        "module-alias": "^2.2.2",
        "multer": "^1.4.2",
        "mysql": "^2.14.1",
        "reflect-metadata": "^0.1.10",
        "tspath": "^1.3.7",
        "typeorm": "^0.2.22"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.17.1",
        "@types/cookie-parser": "^1.4.1",
        "@types/cors": "^2.8.6",
        "@types/errorhandler": "0.0.32",
        "@types/express": "^4.16.0",
        "@types/fs-extra": "^5.0.4",
        "@types/helmet": "0.0.45",
        "@types/jsonwebtoken": "^8.3.5",
        "@types/method-override": "0.0.31",
        "@types/morgan": "^1.7.35",
        "@types/node": "^10.12.18",
        "@types/shelljs": "^0.8.1",
        "fs-extra": "^7.0.1",
        "morgan": "^1.9.1",
        "nodemon": "^1.18.9",
        "ts-node": "^7.0.1",
        "ts-node-dev": "^1.0.0-pre.42",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^5.12.1",
        "typescript": "^3.2.2"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
        "ext": "ts, js"
    }
}
